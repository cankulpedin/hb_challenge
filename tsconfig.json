{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5"
  },
  "include": ["src/index.tsx"],
  "exclude": ["build", "node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
